---
import Section from "@/components/Section.astro";
import type { languages } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import UserCode from "@/icons/UserCode.svg";

const lang = Astro.params.lang as keyof typeof languages;
const t = useTranslations(lang);
---

<Section title={t(lang => lang.about.sectionTitle)} id="About">
  <UserCode class="md:size-8 size-6 -m-1.5" slot={"icon"} />
  <div set:html={t(lang => lang.about.text)} class="[&>p]:mb-[1lh] md:w-10/12 font-raleway w-full md:text-base text-sm"></div>
</Section>
