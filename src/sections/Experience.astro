---
import Section from "@/components/Section.astro";
import type { languages } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import Briefcase from "@/icons/Briefcase.svg";
import Verificate from "@/icons/Verificate.svg";

const lang = Astro.params.lang as keyof typeof languages;
const t = useTranslations(lang);


interface Experience {
  id: string;
  company: string;
  period: {
    start: `${string}/${string}/${string}`;
    end: `${string}/${string}/${string}` | null;
  };
  position: string;
  summary: string
  verificate: boolean;
}

const EXPERIENCES: Experience[] = [
  {
    id: "WM",
    company: "Wireless & Mobile",
    period: {
      start: "14/04/2024",
      end: "17/10/2024",
    },
    position: "Tester",
    summary: t(lang => lang.experience.jobs.wm.summary),
    verificate: true,
  },
];
---

<Section id="Experience" title={t(lang => lang.experience.sectionTitle)} class="w-11/12">
  <Briefcase class="size-8 -m-2" slot={"icon"} />
  {
    EXPERIENCES.reverse().map(
      ({ id, company, period, position, summary, verificate }, index) => (
        <article class="mb-12 flex" id={id}>
          <div class="relative mr-6 no-print">
            <span class="size-4 bg-green-500 dark:bg-green-400 border border-emerald-800 dark:border-emerald-700 rounded-full inline-block absolute left-2/4 -translate-x-1/2 translate-y-1/2 z-50" />
            <span
              class={`absolute inline-block w-1 bg-emerald-800 dark:bg-emerald-700 rounded-full left-2/4 -translate-x-1/2 ${index === EXPERIENCES.length - 1 ? "h-[110%]" : "h-[200%]"}`}
            />
          </div>

          <div>
            <div>
              <div class="flex flex-row items-center justify-between">
                <h4 class="text-lg font-semibold text-gray-800 dark:text-gray-300 flex flex-row gap-2 items-center">
                  {company}
                  {verificate && (
                    <span class=" cursor-poiner" title="Certificado">
                      <Verificate class="size-4.5 text-blue-800 dark:text-blue-400 cursor-pointer" />
                    </span>
                  )}
                </h4>

                <span class="text-base text-gray-900 dark:text-gray-400">
                  {period.start} - {period.end ? period.end : "Actual"}
                </span>
              </div>
              <h5 class="text-base text-gray-800 dark:text-gray-200 -mt-1">{position}</h5>
            </div>

            <p class="text-base mt-2 text-gray-700 dark:text-gray-300" set:html={summary}></p>
          </div>
        </article>
      ),
    )
  }
</Section>

<style>
  article {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>
