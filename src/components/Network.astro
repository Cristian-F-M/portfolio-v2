---
import type { Network } from "@/constants/Networks";
import { twMerge as tw } from "tailwind-merge";

interface Props extends Network {};

const { href, id, class: className, icon: Icon } = Astro.props;
---

<a
  href={href}
  id={id}
  target="_blank"
  rel="noopener noreferrer"
  class={tw(
    "border border-emerald-700/40 p-1 rounded-md bg-green-200 dark:bg-emerald-300/30 dark:border-emerald-400/40 hover:scale-110 transition group w-7 aspect-square flex items-center justify-center",
    className,
  )}
>
  <Icon class="w-full h-auto text-gray-800 dark:text-gray-100" />
</a>
