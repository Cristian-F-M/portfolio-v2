---
import type { Network } from "@/constants/Networks";
import type { languages } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import { twMerge as tw } from "tailwind-merge";

interface Props extends Network {};

const lang = Astro.params.lang as keyof typeof languages;
const t = useTranslations(lang);

const { href, id, class: className, icon: Icon, urlCopy } = Astro.props;
---

<a
  href={href}
  id={id}
  target="_blank"
  rel="noopener noreferrer"
  class={tw(
    "border border-emerald-700/40 p-1 rounded-md bg-green-200 dark:bg-emerald-300/30 dark:border-emerald-400/40 hover:scale-110 transition group md:w-7 w-7 aspect-square flex items-center justify-center",
    className,
  )}
  title={t((lang) => lang.networks.infoCopyMessage)}
  data-url-copy={urlCopy ?? href}
>
  <Icon class="w-full h-auto text-gray-800 dark:text-gray-100" />
</a>
